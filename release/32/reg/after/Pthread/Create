/*thread.c*/$NL#include <stdio.h>$NL#include <stdlib.h>$NL#include <unistd.h>$NL#include <pthread.h>$NL$NL/*线程*/$NLvoid thread_1(void)$NL{$NL    int i=0;$NL    for(i=0;i<=6;i++)$NL    {$NL        printf("This is a thread_1.\n");$NL        if(i==2)$NL            pthread_exit(0);$NL        sleep(1);$NL    }$NL}$NL$NLint main(void)$NL{$NL    pthread_t id_1;$NL    int ret;$NL    /*创建线程一*/$NL    ret=pthread_create(&id_1,NULL,(void  *(*)(void *)) thread_1,NULL);$NL    if(ret!=0)$NL    {$NL        printf("Create pthread error!\n");$NL        return -1;$NL    }$NL$NL    /*等待线程结束*/$NL    pthread_join(id_1,NULL);$NL$NL    return 0;$NL}
